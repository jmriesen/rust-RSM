PostCondition = {":"~Exp}

Brake = { (^"B"|^"Break")~PostCondition?~("  " | " "~Exp~(","~Exp)*)}
CloseArg = _{AtomInd |Exp}
Close = { (^"C"|^"close")~PostCondition?~(" "~CloseArg~(","~CloseArg)*)}
Else = { (^"e"|^"else")~"  "}

DoArg = {ExtrinsicFunction~PostCondition?}
Do = { (^"D"|^"Do")~PostCondition?~("  " | " "~DoArg~(","~DoArg)*)}

ForArg = {Exp~(":"~Exp){,2} }
For = { (^"F"|^"for")~" "~(Variable~"="~(ForArg ~(","~ForArg)*))?~" "~Commands}
Commands = { (Brake | Close | Do | Else | For)* }
Line = { Commands }